# Predecessor and Successor


class Solution
{
    public:
    void findPreSuc(Node* root, Node*& pre, Node*& suc, int key)
    {
        // Your code goes here
        while(root){
            if(root->key == key){
                if(root->left){
                Node* temp=root->left;
                while(temp->right)
                temp=temp->right;
                pre = temp;
            }
            if(root->right){
                Node* temp = root->right;
                while(temp->left)
                temp=temp->left;
                suc = temp;
            }
            break;
            }
            if(root->key > key){
            suc=root;
            root=root->left;
        }
        else{
            pre=root;
            root=root->right;
        }
        }
        
    }
};
